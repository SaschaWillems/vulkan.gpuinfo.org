{
    "groups": [
        {
            "Node": "Subgroup operations",
            "id": "subgroup_operations",
            "subjects": [
                {
                    "id": "subgroup_size",
                    "caption": "Supported sizes",
                    "selection": {
                        "type": "select_database",
                        "options": "select `subgroupProperties.subgroupSize` as `values` from deviceproperties where `subgroupProperties.subgroupSize` > 0 group by `values` order by `values` asc"
                    },
                    "filter": {
                        "whereclause": "r.id in (select reportid from deviceproperties where %where_arguments%)",
                        "column": "`subgroupProperties.subgroupSize`",
                        "comparator": "=",
                        "caption": "subgroup size"
                    }
                },
                {
                    "id": "subgroup_supportedstages",
                    "caption": "Supported stages",
                    "selection": {
                        "type": "select_list_enum",
                        "options": "subgroupSupportedStageFlags"
                    },
                    "filter": {
                        "whereclause": "r.id in (select reportid from deviceproperties where %where_arguments%)", 
                        "column": "`subgroupProperties.supportedStages`",
                        "comparator": "&", 
                        "caption": "supported subgroup stages"
                    }
                },
                {
                    "id": "subgroup_supportedoperations",
                    "caption": "Supported operations",
                    "selection": {
                        "type": "select_list_enum",
                        "options": "subgroupSupportedOperationFlags"
                    },
                    "filter": {
                        "whereclause": "r.id in (select reportid from deviceproperties where %where_arguments%)", 
                        "column": "`subgroupProperties.supportedOperations`",
                        "comparator": "&", 
                        "caption": "supported subgroup operations"
                    }
                },
                {
                    "id": "subgroup_quadOperationsInAllStages",
                    "caption": "Quad operations in all stages",
                    "selection": {
                        "type": "select",
                        "options": [
                            {"value": 1, "caption": "true"},
                            {"value": 0, "caption": "false"}
                        ]
                    },
                    "filter": {
                        "whereclause": "r.id in (select reportid from deviceproperties where `subgroupProperties.quadOperationsInAllStages` = :quadOperationsInAllStages)", 
                        "parameter": "quadOperationsInAllStages", 
                        "caption": "quad operations in all stages"
                    }
                }
            ]
        },
        {
